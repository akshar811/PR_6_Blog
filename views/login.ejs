<!-- views/login.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <title>Login</title>
    <link rel="stylesheet" href="../assets/style.css" />
    <link rel="stylesheet" href="../assets/login.css">
  </head>
  <body>
    <%-include("header") %>
    <form id="form" action="/user/login" method="POST">
      <div class="signup-div">
        <div class="fields">
          <input
            type="email"
            id="email"
            name="email"
            placeholder="Email"
            required
          />
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Password"
            required
          />
          <button type="submit" id="btn">Login</button>
        </div>
      </div>
    </form>
  </body>
</html>
